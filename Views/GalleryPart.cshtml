@using Etch.OrchardCore.Gallery.ViewModels;
@using OrchardCore.ResourceManagement

@model GalleryPartDisplayViewModel
@inject IResourceManager ResourceManager

@{
    if (Model.HasMediaItems) {
        ResourceManager.RegisterResource("stylesheet", "Gallery.Styles").AtHead();
        ResourceManager.RegisterResource("script", "Gallery.Scripts").AtFoot();
    }
}

@if (Model.HasMediaItems)
{
    <ul class="gallery js-gallery">
        @foreach (var media in Model.MediaItems)
        {
            <li class="gallery__item gallery__item--@(media.TypeName.ToLower())">
                <a href="@media.Url">
                    <img src="@media.Thumb" title="@media.Title" alt="@media.Title" />
                </a>
            </li>
        }
    </ul>
}
